f <- function(y) {
result <- (exp(-(y-1)^2/2) + exp(-(y-2)^2/2))/(2*sqrt(2*pi))
return(result)
}
py <- lapply(y, f)
y <- seq(-10, 10, by=0.1)
f <- function(y) {
result <- (exp(-(y-1)^2/8) + exp(-(y-2)^2/8))/(4*sqrt(2*pi))
return(result)
}
py <- lapply(y, f)
plot(y, py, col = "dark green", lwd = 2,
main = "Sketch of marginal probability density with sigma = 2")
f(1)
